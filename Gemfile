source 'https://rubygems.org'

ruby "2.2.2"


# Platform
gem 'puma'            # app server
gem 'rails_12factor'  # includes support for heroku platform features

# Core
gem 'rails', '4.2.3'
gem 'pg'              # postgresql adapter
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.1.0'
gem 'jquery-rails'
gem 'turbolinks'          # makes following links in your web app faster.
gem 'jbuilder', '~> 2.0'  # build JSON APIs


group :development, :test do
  gem 'byebug'                 # interactive debugger
  gem 'web-console', '~> 2.0'  # do `<%= console %>` in your views to use web console
  gem 'spring'                 # makes development faster by running app in the bg
end

